FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    ground
    {
        type            fixedValue;
        value           uniform 300;
    }

    top
    {
        type            fixedGradient;
        gradient        uniform 9.3018e-6;
        value           uniform 300;
    }

    inlet
    {
        type            cyclic;
        value           uniform 300;
    }

    outlet
    {
        type            cyclic;
        value           uniform 300;
    }
    front
    {
        type           zeroGradient;
    }
    back
    {
        type           zeroGradient;
    }
}

