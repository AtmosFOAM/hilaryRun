FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

regions
(
    // A buoyancy perturbation near the ground (0.1), or not (0)
    boxToCell
    {
        box (99e3 0 0) (101e3 1000 2000);
        fieldValues
        (
            volScalarFieldValue b.buoyant 1e-2
            volScalarFieldValue b.stable 1e-2
        );
    }
    
    // Cooling in the troposphere
    boxToCell
    {
        box (0 0 0) (200e3 1e3 10e3);
        fieldValues
        (
            volScalarFieldValue Q -3.858e-07
        );
    }
);

