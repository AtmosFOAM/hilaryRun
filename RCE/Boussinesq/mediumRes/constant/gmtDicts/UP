FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X18c/9c";
projection2D XZ;

FieldsToPlot
(
    [P rawValues gmt0 0 0 "$GMTU/colours/red_white_blue.cpt"]
    [u vectors 100 1 "black"]
);

separateLegend false;
region "0/200e3/0/10e3";
plotBoundaryDots false;
annotate "minMax 100 -100";
