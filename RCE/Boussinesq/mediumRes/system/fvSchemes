FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}
offCentre 0.5;

gradSchemes
{
    default                   Gauss linear;
}

divSchemes
{
    default none;
    sigma        Gauss vanLeer;
    b            Gauss vanLeer;
    u            Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        none;
    convection      linear;
    sigma           linear;
    b               linear;
    massTransfer    linear;
    interpolate(sigma.stable) linear; //vanLeer volFlux.stable;
    interpolate(sigma.buoyant) linear; //vanLeer volFlux.buoyant;
    transfer        linear;
}

snGradSchemes
{
    default         uncorrected;
}

fluxRequired
{
    default         no;
    P;
}


