FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      b;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -2 0 0 0 0];

internalField   nonuniform List<scalar> 40
(
REPLACE
);

boundaryField
{
    ground
    {
        type            fixedHeatFlux;
        gradient        uniform 0;
        heatFlux        uniform 1e-3;
        densityName     sigma.buoyant;
        diffusivityName alpha;
    }
    top
    {
        type            zeroGradient;
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
}


