FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X30.3c/15c";
projection2D XZ;

FieldsToPlot
(
    [b filledContours -3.5e-4 3.5e-4 2e-5 "$GMTU/colours/red_white_blue.cpt"]
    [u vectors 200 3 "black"]
    [uz contours 0.1 2.1 0.2 "black"]
    [uz contours -2.1 -0.1 0.2 "black,5_5:,"]
);

separateLegend true;
//region "0/10/-0.1/1.1";
plotBoundaryDots false;
annotate "minMax 3 1.3";
