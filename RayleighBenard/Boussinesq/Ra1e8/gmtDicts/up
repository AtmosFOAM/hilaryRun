FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X30.3c/15c";
projection2D XZ;

FieldsToPlot
(
    [sigma.up filledContours 0 0.5 0.05 "$GMTU/colours/white_grey.cpt"]
    [b.up colouredContours -0.525 0.525 0.05 "$GMTU/colours/red_white_blue.cpt"]
    [u.up     vectors 0.3 3 "black"]
);

separateLegend true;
//region "-10.1e3/10.1e3/0/10e3";
plotBoundaryDots false;
annotate "minMax 0 -0.01";
