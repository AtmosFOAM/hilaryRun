FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     multiFluidBoussinesqFoam;

//startFrom       startTime;
startFrom       latestTime;

startTime       0;

stopAt          endTime;

// Simulation with Ra = 1e8
// H = 1, DeltaB=1, Pr = nu/alpha = 0.707, nu alpha = 1e-8
// => alpha = 1e-8/nu => nu^2 = 0.707*1e-8
// => nu = 8.4083292038e-5, alpha = 1.1892969171e-4
// Eddy turnover time Te = 4 sqrt(H/deltaB) =4
// End time = 38 Te  ~ 152
// Time step = 3.197e-4*Te ~

endTime         152;

deltaT          0.0025;

writeControl    runTime;

writeInterval   0.2;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep no;
maxCo          0.5;

libs
(
    "libExnerTheta.so"
);


