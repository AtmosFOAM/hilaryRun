FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

regions
(
    // A buoyancy perturbation at the ground
    nearestToPoint
    {
        points 1((1 0 0));
        fieldValues
        (
            volScalarFieldValue b.air 0.5
        );
    }
    // Another buoyancy perturbation at the ground
    boxToCell
    {
        box (0.51 0 0) (1.01 1 0.01);
        fieldValues
        (
            volScalarFieldValue b.air 0.5
        );
    }
);

