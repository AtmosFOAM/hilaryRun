FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X40c/10c";
projection2D XZ;

FieldsToPlot
(
    [sigma.stable rawValues 0 1 0.1 "$GMTU/colours/white_grey.cpt"]
    [b.stable colouredContours -0.2 0.2 0.01 "$GMTU/colours/red_white_blue.cpt"]
    [u.stable     vectors 0.4 3 "black"]
);

separateLegend true;
region "-2/2/0/1";
plotBoundaryDots false;
annotate "minMax 0 -0.01";
