FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X40c/10c";
projection2D XZ;

FieldsToPlot
(
    [sigmaDiff rawValues -0.95 0.95 0.1 "$GMTU/colours/red_white_blue.cpt"]
    [u.down   vectors 0.4 3 "blue"]
    [u.up     vectors 0.4 3 "red"]
    [u.stable vectors 0.4 3 "black"]
);

separateLegend true;
region "-2/2/0/1";
plotBoundaryDots false;
annotate "minMax 0 -0.01";
