FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X40c/10c";
projection2D XZ;

FieldsToPlot
(
    [b rawValues -0.5 0.5 0.05 "$GMTU/colours/red_white_blue.cpt"]
    [u vectors 0.2 3 "black"]
);

separateLegend true;
region "-2/2/0/1";
plotBoundaryDots false;
annotate "minMax 0 -0.01";
