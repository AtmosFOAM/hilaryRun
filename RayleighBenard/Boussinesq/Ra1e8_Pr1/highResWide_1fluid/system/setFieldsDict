FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

regions
(
    // A buoyancy perturbation at the ground
    nearestToCell
    {
        points 1((0 0.5 0));
        fieldValues
        (
            volScalarFieldValue b.air 0.51
        );
    }
);

