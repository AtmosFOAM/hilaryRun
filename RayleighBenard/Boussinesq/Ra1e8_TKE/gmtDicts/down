FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X60c/10c";
projection2D XZ;

FieldsToPlot
(
    [sigma.down rawValues 0 0.5 0.05 "$GMTU/colours/white_grey.cpt"]
    [b.down colouredContours -0.525 0.525 0.05 "$GMTU/colours/red_white_blue.cpt"]
    [u.down     vectors 0.4 7 "black"]
);

separateLegend true;
region "-4/4/0/1";
plotBoundaryDots false;
annotate "minMax 0 -0.01";
