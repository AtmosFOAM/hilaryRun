FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X80c/10c";
projection2D XZ;

FieldsToPlot
(
    [sigma.stable filledContours 0 1 0.1 "$GMTU/colours/white_grey.cpt"]
    [u vectors 200 3 "black"]
    [sigma.stable contours 0 1 0.5 "2,black"]
    [sigma.up contours 0 1 0.5 "2,red"]
    [sigma.down contours 0 1 0.5 "2,blue"]
);

separateLegend true;
//region "0/10/-0.1/1.1";
plotBoundaryDots false;
annotate "minMax 3 1.3";
