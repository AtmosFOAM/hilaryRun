FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "P|p.stable|p.up|p.down"
    {
        solver PCG;
        preconditioner DIC;
        tolerance        1e-6;
        relTol           0;
    }
}

iterations
{
    nOuterCorrectors 1;
    nNonOrthogonalCorrectors 0;
}

