FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIgravityWaves true;
advectionType  Implicit;

ddtSchemes
{
    ocCoeff      1;
    default      none;
}

gradSchemes
{
    default      Gauss linear;
}

divSchemes
{
    default none;
    div(phi,U)        Gauss QUICKupwind 1 1 rho;
    div(phi,thetap)        Gauss QUICKupwind 1 1 rho;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear uncorrected;

    advectDiffuse(phi,thetap) advectionDiffusion
    {
        nIterations 1;
        FCTlimit FCTon;
        FCTmin 0;
        FCTmax 0;
        correctionScheme QUICKupwind 1 1 rho;
    };
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         uncorrected;
}

fluxRequired
{
    default         no;
    Exnerp;
    thetap;
}


