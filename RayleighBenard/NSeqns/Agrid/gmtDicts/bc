FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X45c/15c";
projection2D XZ;

FieldsToPlot
(
    [thetap filledContours -29 29 2 "$GMTU/colours/red_white_blue.cpt"]
    [Co contours 1 101 50 "black,2_5:0"]
    [Co contours 1.2 10 0.2 "black"]
);

separateLegend true;
region "-1.5/1.5/0/1";
plotBoundaryDots false;
