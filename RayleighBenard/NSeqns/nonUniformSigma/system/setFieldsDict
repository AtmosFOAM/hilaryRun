FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

regions
(
    // Set cell values near boundaries
    boxToCell
    {
        box (0 0 -1) (10 1 0);
        fieldValues
        (
            volScalarFieldValue theta         330
            volScalarFieldValue sigma.buoyant 0.999999
            volScalarFieldValue sigma.stable  1e-6
        );
    }

    boxToCell
    {
        box (0 0 1) (10 1 2);
        fieldValues
        (
            volScalarFieldValue theta         270
            volScalarFieldValue sigma.buoyant 1e-6
            volScalarFieldValue sigma.stable  0.999999
        );
    }
);

