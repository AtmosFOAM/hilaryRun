(
    [b filledContours -1.025e-2 1.025e-2 0.5e-3 "$GMTU/colours/red_white_blue.cpt"]
    [u vectors 200 3 "black"]
);

separateLegend true;
//region "0/10/-0.1/1.1";
plotBoundaryDots false;
annotate "minMax 3 1.3";
