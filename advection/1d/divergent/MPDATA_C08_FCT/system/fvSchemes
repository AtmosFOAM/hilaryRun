FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    div(phi,T)     MPDATA
    {
        nCorr 1;  //(>=0)
        gauge -100;
        offCentre -1;
        timeCorrector advective; // flux, advective or none
        FCTlimit true;
        //FCTmin 0;
        //FCTmax 1.00263;
    };
    MPDATA_div Gauss linear;
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default         none;
    MPDATA_denom   reverseLinear;
    MPDATA_velocity linear;
    MPDATA_gradient linear;
    MPDATA_idiv linear;
    interpolate(U) upwind phiTmp;
}

snGradSchemes
{
    default         uncorrected;
}


