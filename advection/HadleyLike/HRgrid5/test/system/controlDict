FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application buoyantFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         86400;

deltaT          600;
// umax = 40, wmax = 0.3, dz = 800, dx = 1000km
// For C=1 in horizontal, c = u dt/dx  dt = 25000
// For C=1 in vertical, dt = 

writeControl    runTime;

writeInterval   3600;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep no;

