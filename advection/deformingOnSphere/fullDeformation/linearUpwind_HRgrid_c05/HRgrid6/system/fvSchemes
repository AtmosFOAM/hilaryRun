FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

CoLimit 1;
fullImplicit true;
ddtSchemes
{
    default none;
}

gradSchemes
{
    default         none;
    linearUpwind    Gauss linear;
}

divSchemes
{
    default             none;
    div(phi,T)          Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         none;
}


