FoamFile
{
    version         1.4;
    format          ascii;

    root            "/export/lime/data-04/sws02hs/OpenFOAM/sws02hs-1.4.1/run/shallowWater";
    case            "bucky4_30";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
projection "Q180/18c";
projection2D latLon;
plotBoundaryDots false;

FieldsToPlot
(
    [T rawValues -1.05 1.05 0.1 "$GMTU/colours/red_white_blue.cpt"]
    [none mesh      "0.25p,black"]
);

// options
region "0/360/-90/90";
boundaryMarks "a60/a60";
separateLegend false;
annotate "minMax 180 -105";
lonMin 360;

