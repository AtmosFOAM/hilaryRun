FoamFile
{
    version         1.4;
    format          ascii;

    root            "/export/lime/data-04/sws02hs/OpenFOAM/sws02hs-1.4.1/run/shallowWater";
    case            "bucky4_30";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
projection "Q180/18c";
projection2D latLon;
plotBoundaryDots false;

FieldsToPlot
(
    [T rawValues 0. 1.1 0.025 "$GMTU/colours/wh-bl-gr-ye-re.cpt"]
    //[Co colouredContours 0.8 2 0.2 "$GMTU/colours/grey_black.cpt"]
    [Co contours 1 50 1 "0.25p,black,1_2:0"]
);

// options
region "0/360/-90/90";
boundaryMarks "a60/a60";
separateLegend true;
annotate "minMax 180 -105";
lonMin 360;
