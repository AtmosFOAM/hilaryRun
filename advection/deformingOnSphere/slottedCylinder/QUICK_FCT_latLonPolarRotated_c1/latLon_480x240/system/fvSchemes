FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default             none;
    div(phi,T)          adaptiveImplicitAdvection
    {
        correctionScheme QUICKupwind -1 -1 none;
        nCorr 2;
        offCentre -1;
        CoLimit 1;
        FCTlimit true;
        //FCTmin 0;
        //FCTmax 1.00263;
    };
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         none;
}

fluxRequired
{
    T;
}
