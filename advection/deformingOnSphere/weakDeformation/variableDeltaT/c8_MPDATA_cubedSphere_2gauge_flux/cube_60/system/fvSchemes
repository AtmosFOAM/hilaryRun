FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         none;
}

divSchemes
{
    default             none;
    div(phi,T)          MPDATA
    {
        nCorr 2;  //(>=0)
        gauge 10;
        offCentre -1;
        timeCorrector flux; // flux, advective or none
        FCTlimit false;
        FCTmin 0;
        FCTmax 2;
    };
    MPDATA_div Gauss linear;
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default        none;
    MPDATA_denom   linear;
    MPDATA_idiv    reverseLinear;
}

snGradSchemes
{
    default         none;
}


