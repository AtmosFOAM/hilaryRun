FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      velocityDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 0
);

regions
(
    sphereToCell
    {
        centre (0.5 0.5 0.05);
        radius 0.1;
        fieldValues
        (
            volScalarFieldValue T 1
        );
    }
);
