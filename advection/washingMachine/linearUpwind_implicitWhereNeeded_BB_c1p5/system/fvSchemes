FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}
offCentre 1;
CoLimit   0.5; // Limit for explicit advection

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none; //Gauss vanLeer;
    explicit        Gauss linearUpwind linearUpwind;
    implicit        Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default         none;
}

snGradSchemes
{
    default         none;
}


