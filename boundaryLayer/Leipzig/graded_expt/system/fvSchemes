FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler; //CrankNicolson 0.8;
}

gradSchemes
{
    default         Gauss linear;
}

wallDist
{
    method meshWave;
}

divSchemes
{
    default         none;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
    div(phi,epsilon)	bounded Gauss linear;
    div(phi,k)		bounded Gauss linear;
}

laplacianSchemes
{
    //default         	Gauss linear uncorrected;
    laplacian(nuEff,U)  Gauss cubic uncorrected;
    laplacian(DepsilonEff,epsilon) Gauss localMin  uncorrected;
    laplacian(DkEff,k) Gauss localMax uncorrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         uncorrected;
}


// ************************************************************************* //
