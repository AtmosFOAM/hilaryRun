FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.0335410615;

boundaryField
{
    ground
    {
        type           nutkRoughWallFunction;
        Ks              uniform 0.167;
        Cs              uniform 0.5;
        kappa           0.41;
        value           uniform 1;
    }
    centerLine
    {
        type            zeroGradient;
    }
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    sides
    {
        type            empty;
    }
}


