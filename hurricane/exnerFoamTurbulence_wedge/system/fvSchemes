FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// exnerFoamTurbulence must be run with Crank Nicolson time-stepping and ddt
// (rho,U)_CN must have the same off-centering coefficient
ddtSchemes
{
    default         CrankNicolson 0.9;
    ddt(rho,U)_CN   0.9;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)      Gauss linearUpwind linearUpwind;
    div(phi,theta)  Gauss linearUpwind linearUpwind;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
    div(phi,K)      Gauss linearUpwind linearUpwind;
    div(phi,h)      Gauss linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         uncorrected;
}

fluxRequired
{
    Exner;
}

// ************************************************************************* //
