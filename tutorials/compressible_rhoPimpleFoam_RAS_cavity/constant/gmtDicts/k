FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X18c/18c";
projection2D XY;

FieldsToPlot
(
    [k filledContours 0 0 0 "$GMTU/colours/red_white_blue.cpt"]
    [U vectors 0.1 1 "black"]
);

//separateLegend true;
region "0/0.1/0/0.1";
annotate "minMax 0.05 -0.01";
boundaryMarks "0.01/0.01";
plotBoundaryDots false;

