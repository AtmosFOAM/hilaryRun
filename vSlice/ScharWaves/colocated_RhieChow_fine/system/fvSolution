FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|rhoFinal)"
    {
        solver PCG;
        preconditioner   DIC;
        tolerance        0;
        relTol           0;
    };
    Exner
    {
        solver PCG;
        preconditioner DIC;
        tolerance        1e-8;
        relTol           1e-2;
    }

    ExnerFinal
    {
        $Exner;
        relTol           0;
    }
    
    "(theta|thetaFinal|U|UFinal)"
    {
        solver PCG; //PBiCG;
        preconditioner   DIC; //DILU;
        tolerance        1e-8;
        relTol           0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nOuterCorrectors 2;
    nCorrectors     2;
    momentumPredictor false;
}

iterations
{
    nOuterCorrectors 2;
    nCorrectors      1;
    nNonOrthogonalCorrectors 0;
    nAdvectionSubSteps 1;
}

initialisation
{
    maxIters 50;
    BCiters  3;
    BCtol    1e-6;
    boundaryRelaxation 4;
}

relaxationFactors // for initialisation)
{
    fields
    {
    
        theta         1;
    }
    equations
    {
        Exner         1;
    }
}

