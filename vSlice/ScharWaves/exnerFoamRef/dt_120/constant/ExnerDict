// constants for initialising theta with setTracerField
type exponentialWithHeight;
spherical false;
z0 0;
tracerAtz0 3.324907;      //g^2/(cp N^2 theta0)
scaleHeight   9.81e4;    // -g/N^2, N = 0.01/s
offset        -2.324907;  // 1 - 3.324907

