FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application buoyantFoam;

//startFrom       startTime;
startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         11000;

deltaT          5;

writeControl    runTime;

writeInterval   1000;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep no;
maxCo          1;

functions
{
    tracer
    {
        type            scalarTransport;
        libs            ("libsolverFunctionObjects.so");

        // Optional entries

        // Name of scalar field to transport, default = 's'
        field           tracer;

        // Name of flux field, default = 'phi'
        phi             volFlux;

        // Diffusivity
        D               0;

    }
}
