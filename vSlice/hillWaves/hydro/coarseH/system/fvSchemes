FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIgravityWaves false;
implicitU      false;
implicitT      false;
hydrostatic    false;

ddtSchemes
{
    ocCoeff      0;
    default      CrankNicolson $ocCoeff;
}

gradSchemes
{
    default      leastSquares;
}

divSchemes
{
    default none;
    div(phi,theta)   Gauss CoBlended 1 linearUpwind limitDiv 2 upwind;
    div(phi,u)        Gauss CoBlended 1 linearUpwind limitDiv 2 upwind;
    div(phi,w)        Gauss CoBlended 1 linearUpwind limitDiv 2 upwind;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear corrected;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
    snGrad(lnExner)   uncorrected;
    snGrad(decay)   corrected;
    uncorr          uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


