FoamFile
{
    version     2.2;
    format      ascii;
    class       volScalarField;
    location    "constant";
    object      Exner_init;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    /*ground
    {
        type            hydrostatic;
        gradPcoeffName  CpTheta;
        buoyancyName    gSf;
        gradient        uniform 0;
        value           uniform 1;
    }*/
    ground
    {
        type            fixedFluxBuoyantExner;
        gradient        uniform 0;
        value           uniform 1;
    }
    top
    {
        type            fixedFluxBuoyantExner;
        gradient        uniform 0;
        value           uniform 1;
        //type            fixedValue;
        //value           uniform 0.144892583971;
    }
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
}


