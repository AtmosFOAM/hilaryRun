FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIgravityWaves true;
implicitU      true;
implicitT      true;
hydrostatic    false;

ddtSchemes
{
    ocCoeff      1;
    default      CrankNicolson $ocCoeff;
}

gradSchemes
{
    default        Gauss linear;
    linearUpwind   Gauss linear;
}

divSchemes
{
    default none;
    div(phi,theta)    Gauss linearUpwind linearUpwind;
    div(phi,U)        Gauss linearUpwind linearUpwind;
    div(phi,w)        Gauss linearUpwind linearUpwind;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear corrected;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default        linear;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    Exner;
}


