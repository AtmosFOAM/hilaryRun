FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIgravityWaves true;

solvers
{
    rho
    {
        solver PCG;
        preconditioner   diagonol;
        tolerance        0;
        relTol           0;
    };
    Exner
    {
        solver PCG;
        preconditioner DIC;
        tolerance        1e-9;
        relTol           0.01;
    }
    ExnerFinal
    {
        $Exner;
        tolerance        1e-9;
        relTol           0;
    }
    
    "(k|epsilon|theta|U)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol           0;
    }
}

iterations
{
    nOuterCorrectors 1;
    nCorrectors      1;
    nNonOrthogonalCorrectors 0;
}

initialisation
{
    maxIters 100;
    refCell 0;
    refExner 1;
}

