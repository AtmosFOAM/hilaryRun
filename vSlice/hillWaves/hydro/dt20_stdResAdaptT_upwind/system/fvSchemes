FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIgravityWaves true;
implicitU      false;
implicitT      false;
hydrostatic    false;

ddtSchemes
{
    ocCoeff      1;
    default      none;
}

gradSchemes
{
    default      Gauss linear;
}

divSchemes
{
    default none;
    div(phi,theta)   Gauss  upwind; //QUICKupwind 0 0;
    div(phi,u)        Gauss upwind; //QUICKupwind 0 0;
    div(phi,w)        Gauss upwind; //QUICKupwind 0 0;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear corrected;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default        none;
    interpolate(rho)  linear;
    flux((rho*U))     linear;
    interpolate(muSponge) linear;
    interpolate(theta) linear; //upwind phiNew;
    interpolate((rho|A(w))) linear;
    interpolate((rho|A(u))) linear;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    Exner;
}


