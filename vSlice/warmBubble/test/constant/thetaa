FoamFile
{
    version     2.2;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      theta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    ground
    {
        type            fixedValue;
        value           uniform 300;
    }
    top
    {
        type            fixedValue;
        value           uniform 300;
    }
    left
    {
        type            zeroGradient;
    }
    right
    {
        type            zeroGradient;
    }
}


