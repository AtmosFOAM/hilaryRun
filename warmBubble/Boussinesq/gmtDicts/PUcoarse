//    [Pi.stable  contours  -21 -1 2 "2,blue,10_15:0"]

    [u.buoyant vectors  0 6 "red"]
    [u.stable vectors  0 7 "blue"]
    
    [u.buoyantz contours 0.5 10.5 1 "black"]
    [u.buoyantz contours -10.5 -0.5 1 "black,2_2:0"]
);

