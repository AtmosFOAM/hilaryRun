FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X12c/12c";
projection2D XZ;

FieldsToPlot
(
    [b rawValues 0 0.03 0.003 "$GMTU/colours/white_blue_red.cpt"]
    [u vectors 50 3 "black"]
    [uz contours        0 1000 1000 "2,white"]
    [uz contours        0 1000 1000 "1,black,1_2:"]
    [sigma.buoyant contours 0.1 0.5 0.4 "green"]
);

separateLegend true;
//region "-5000/5000/0/1e4";
//region "-2500/2500/0/5000";
boundaryMarks "5e3/5e3";
plotBoundaryDots false;
