FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X12c/12c";
projection2D XZ;

FieldsToPlot
(
    [sigma.buoyant filledContours 0 1 0.1 "$GMTU/colours/white_grey.cpt"]
    [b.stable  colouredContours  0 0.06 0.005 "$GMTU/colours/white_blue_red.cpt"]
    [b.buoyant  colouredContours 0 0.06 0.005 "$GMTU/colours/white_blue_red.cpt"]
    [u.buoyant vectors 50 7 "red"]
    [u.stable vectors  50 7 "black"]
);

separateLegend true;
region "-5000/5000/0/1e4";
//region "-2500/2500/0/5000";
boundaryMarks "2500/2500";
plotBoundaryDots false;
