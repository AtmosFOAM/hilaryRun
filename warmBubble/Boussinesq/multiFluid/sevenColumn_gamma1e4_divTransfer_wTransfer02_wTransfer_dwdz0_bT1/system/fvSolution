FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "P"
    {
        solver GAMG;
        smoother DICGaussSeidel;
        tolerance      1e-6;
    }
    "p.stable|p.buoyant|ph"
    {
        solver GAMG;
        smoother DICGaussSeidel;
        tolerance      1e-9;
    }
}

iterations
{
    nOuterCorrectors 2;
    nCorrectors      1;
    nNonOrthogonalCorrectors 0;
}


