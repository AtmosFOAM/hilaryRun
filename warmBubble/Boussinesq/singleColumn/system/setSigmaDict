FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue sigma.buoyant 0.1
);

regions
(
    // Set cell values
    // (does zerogradient on boundaries)
    sphereToCell
    {
        centre (0 0.5 2.5);
        radius 2.5;

        fieldValues
        (
            volScalarFieldValue sigma.buoyant 0.5
        );
    }

);

// ************************************************************************* //
