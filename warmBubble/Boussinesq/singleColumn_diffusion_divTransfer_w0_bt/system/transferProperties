FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          environmentalProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cloudRadiusMax     cloudRadiusMax [0 1 0 0 0] 5000;
cloudRadiusMin     cloudRadiusMin [0 1 0 0 0] 5000;
dragCoeff       0;
Ksigma Ksigma [0 2 -1 0 0] 0; //1e3;
minSigma  1e-9;
// Transfer between partitions based on horizontal divergence
wTransfer false;
divTransfer 1;
// Transfer between partitions based on laplacian(b)
buoyancyTransfer false;
bTransferDiffusivity bTransferDiffusivity  [0 2 -1 0 0] 1e4;
transferTimeScale transferTimeScale [0 0 1 0 0] 10;
transferAnomalies true;

uniformSigma false;

