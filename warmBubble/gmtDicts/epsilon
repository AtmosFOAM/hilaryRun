FoamFile
{
    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X12c/12c";
projection2D XZ;

FieldsToPlot
(
    [epsilon.stable    filledContours 0 5e-4 5e-5 "$GMTU/colours/white_grey.cpt"]
    [epsilon.buoyant   colouredContours 0 5e-4 5e-5 "$GMTU/colours/white_blue_red.cpt"]
    [Uf.buoyant vectors 50 26 "red"]
    [Uf.stable vectors  50 26 "black"]
);

separateLegend true;
