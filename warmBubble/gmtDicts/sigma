    version         2.3;
    format          ascii;

    root            "";
    case            "";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
// Compulsory inputs
projection "X18c/18c";
projection2D XZ;

FieldsToPlot
(
    [buoyant.sigma filledContours 0 1 0.05 "$GMTU/colours/white_blue_red.cpt"]
    [stable.Uf vectors 100 13 "black"]
    [buoyant.Uf vectors 100 13 "blue"]
);

//separateLegend true;
