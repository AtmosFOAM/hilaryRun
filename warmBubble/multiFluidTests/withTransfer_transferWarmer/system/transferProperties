FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          environmentalProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cloudRadiusMax     cloudRadiusMax [0 1 0 0 0] 2000;
cloudRadiusMin     cloudRadiusMin [0 1 0 0 0] 1;
dragCoeff       1;
Ksigma Ksigma [0 2 -1 0 0] 0;
minSigma  1e-9;
// Transfer between partitions based on horizontal divergence
wTransfer false;
divTransfer false;
// Transfer between partitions based on laplacian(theta)
thetaTransfer true;
thetaTransferDiffusivity thetaTransferDiffusivity  [0 2 -1 0 0] 1e5;
thetaTransferDiffusivity2 thetaTransferDiffusivity2  [0 2 -1 0 0] 1e5;

// Temperature perturbation for the transferred fluid
thetatMin 0;
thetatMax 10;


