FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    ground
    {
        type            nutkAtmRoughWallFunction;
        z0              uniform 0.1;
        value           uniform 1;
    }
    top
    {
        type            zeroGradient;
        value           uniform 0;
    }
    left
    {
        type           zeroGradient;
    }
    right
    {
        type           zeroGradient;
    }
}


